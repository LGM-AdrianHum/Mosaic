<UserControl x:Class="Desktop.DesktopWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Green" MouseLeftButtonDown="UserControlMouseLeftButtonDown" MouseLeftButtonUp="UserControlMouseLeftButtonUp">
    <Grid>
        <Image Name="DesktopPreview" Stretch="UniformToFill" RenderOptions.BitmapScalingMode="HighQuality"/>
        <TextBlock Text="Desktop" Foreground="White" FontSize="14" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10,0,0,10"/>
    </Grid>
</UserControl>
