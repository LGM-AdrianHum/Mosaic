<UserControl x:Class="Video.VideoWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MouseLeftButtonUp="UserControlMouseLeftButtonUp">
    <UserControl.Background>
        <LinearGradientBrush StartPoint="1,0" EndPoint="0,0">
            <GradientStop Color="#8036b1" Offset="0"/>
            <GradientStop Color="#6d29a2" Offset="1"/>
        </LinearGradientBrush>
    </UserControl.Background>
    <Grid>
        <Image Source="/Video;component/Resources/video_logo.png" Width="65"/>
        <TextBlock Text="Video" Foreground="White" FontSize="14" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10,0,0,10"/>
    </Grid>
</UserControl>
