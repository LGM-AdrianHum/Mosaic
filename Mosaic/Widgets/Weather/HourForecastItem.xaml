<UserControl x:Class="Weather.HourForecastItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Foreground="White" FontWeight="Light">
    <StackPanel>
        <TextBlock Name="Temperature" Text="0°" FontSize="45"/>
        <TextBlock Name="Time" Text="3:00PM" FontSize="24" Margin="0,-10,0,0"/>
        <TextBlock Name="ChanceOfRain" Text="0%" FontSize="16"  Margin="0,-5,0,0"/>
    </StackPanel>
</UserControl>
